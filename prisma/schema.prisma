generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Registro {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre   String
  correo   String   @unique
  clave    String
  creadoEn DateTime @default(now())
}
model Noticia {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  foto            String
  titular         String
  descripcion     String
  metaDescripcion String
  fraseClave      String
  slug            String   @unique
  fecha           DateTime
  categoria       String
  creadoEn        DateTime @default(now())
}